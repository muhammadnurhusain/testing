generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model InboundTransaction {
  id           String        @id @default(uuid())
  referenceNo  String
  supplier     String
  receivedDate DateTime
  items        InboundItem[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model InboundItem {
  id               String             @id @default(uuid())
  productSku       String
  productName      String
  quantityReceived Int
  quantityAccepted Int
  status           InboundStatus     @default(PENDING)
  locationCode     String?           // Optional
  transaction      InboundTransaction @relation(fields: [transactionId], references: [id])
  transactionId    String
}

enum InboundStatus {
  PENDING
  RECEIVED
  INSPECTED
  PUTAWAY
}

enum QCStatus {
  PENDING
  PASSED
  REJECTED
}